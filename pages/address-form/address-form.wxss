/* pages/address-form/address-form.wxss */

.form-box {
    margin: 10px 15px;
    font-size: 16px;
    color: #333;
}

.form-item {
    display: flex;
    justify-content: space-between;
}

.section_item {
    width: 100px;
    line-height: 40px;
}
.form-item-input{
    width: 100%;
    height: 40px;
    line-height: 40px;
    border-bottom: 1px #333 solid;
    margin-bottom: 15px;
}
.btn-area{
    height: 60px;
    border: 1px #f2f2f2 solid;
    background: #fff;
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
}
.submit-btn{
    font-size: 14px;
    color: #fff;
    background: #f73859;
    height: 40px;
    line-height: 40px;
    margin: 10px;
    border-radius: 0;
    width: 100%;
}
.del-btn{
    font-size: 14px;
    height: 40px;
    line-height: 40px;
    margin: 10px;
    border-radius: 0;
    width: 100px;
}
.btn-box{
    display: flex;
    justify-content: space-between;
}